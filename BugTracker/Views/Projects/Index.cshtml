<section>
    <section class="wrapper">
        <h3>Projects <i class="fa fa-angle-right"></i> <span class="create"> @Html.ActionLink("Create New Project", "Create") </span></h3>
        <div class="row mb ml">

            <!-- page start-->
            <div class="content-panel" style="color: black;">
                <div class="adv-table">
                    <table cellpadding="0" cellspacing="0" border="0" class="DTable display table table-bordered" id="hidden-table-info">

                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Assignee(s)</th>
                                @*<th>Assignment Actions</th>*@
                                <th>Created</th>
                                <th>Modified</th>
                                <th>Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                var projectUsers = item.Users.Select(u => u.DisplayName);

                                <tr class="gradeA">


                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>  
                                        @foreach (var user in projectUsers)
                                        {
                                            @user <br />
                                        }
                                    </td>

                                    @*<td class="center">
                                        <div class="btn-group-vertical btn-group-xs">
                                            @Html.ActionLink("Assign Users", "AddUserToProject", new { projectId = item.Id }, new { @class = "btn tableBtn btn-default" })
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn tableBtn btn-default" })
                                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn tableBtn btn-default" })
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn tableBtn btn-default" })
                                        </div>
                                    </td>*@

                                    <td>@Html.DisplayFor(modelItem => item.Created)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Updated)</td>

                                    <td class="center">
                                        <div class="btn-group-vertical btn-group-xs">
                                            @Html.ActionLink("Edit Project", "Edit", new { id = item.Id }, new { @class = "btn tableBtn btn-default" })
                                            @Html.ActionLink("Project Details", "Details", new { id = item.Id }, new { @class = "btn tableBtn btn-default" })
                                            @Html.ActionLink("Delete Project", "Delete", new { id = item.Id }, new { @class = "btn tableBtn btn-default" })
                                            @Html.ActionLink("Add Users", "AddUserToProject", new { projectId = item.Id }, new { @class = "btn tableBtn btn-default" })
                                            @Html.ActionLink("Remove Users", "RemoveUserFromProject", new { projectId = item.Id }, new { @class = "btn tableBtn btn-default" })
                                         </div>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- page end-->


        </div><!-- /row -->

    </section><! --/wrapper -->
</section><!-- /MAIN CONTENT -->




